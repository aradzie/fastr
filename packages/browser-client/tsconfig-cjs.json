{
  "$schema": "http://json.schemastore.org/tsconfig",
  "extends": "../../tsconfig-template.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "lib-cjs",
    "lib": ["es2022", "dom", "dom.iterable"],
    "module": "commonjs",
    "declaration": false,
    "incremental": true,
    "tsBuildInfoFile": "lib-cjs/.tsbuildcache"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/test/*",
    "**/*.test.*"
  ]
}
